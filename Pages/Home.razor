@code {
    protected override async Task OnInitializedAsync()
    {
        // Redirect admin to dashboard
        var role = await AuthService.GetRoleAsync();
        if (role?.ToLower() == "admin")
        {
            Navigation.NavigateTo("/dashboard");
        }
    }
}